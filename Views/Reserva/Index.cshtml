
@{
    ViewBag.Title = "Index";
}

<h2>Reserva</h2>
<form id="form-buscar">
    <div>
        <div class="form-group row">
            <label  class="col-sm-2 col-form-label">Código Libro</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" name="varCode">
            </div>
        </div>
    </div>
    <button class="btn btn-primary" type="button" id="buscar">Buscar
    </button>
</form>
<br>
<button class="btn btn-primary position-relative" type="button" id="mostrar-notificacion">
    Notificacion
    <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" id="nro-notificacion">
       0
    </span>
</button>
<br>
<div id="container-reserva">
    <table class="table" id="tabla-libros">
        <thead>
            <tr>
                <th>Item</th>
                <th>Código</th>
                <th>Libro</th>
                <th>Estado</th>
                <th>Fecha Reserva</th>
            </tr>
        </thead>
        <tbody id="data">
        </tbody>
    </table>
    
</div>

<div class="modal" id="modalConfirmacion" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="titulo-modal">Confirmar</h5>
            </div>
            <div class="modal-body">
                <p id="cuerpo-modal"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="reservar">Reservar</button>
                <button type="button" class="btn btn-secondary" id="cerrar" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="modalNotificaciones" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Notificaciones</h4>
            </div>
            <div class="modal-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>PENDIENTE</th>
                        </tr>
                    </thead>
                    <tbody id="body-notificacion">

                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" id="cerrar-notificacion" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/moment.min.js"></script>
<script src="~/Scripts/reserva.js"></script>